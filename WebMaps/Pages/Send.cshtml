@page
@model SendModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
</head>
<body>

    <form class="container" method="post">
        <br />
        <div class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-1">Navn:</label>
                <div class="col-sm-2 ">
                    <input class="form-control" asp-for="Bruger.Navn">
                    <span class="alert-danger" asp-validation-for="Bruger.Navn"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-1">Adresse:</label>
                <div class="col-sm-2">
                    <input class="form-control" asp-for="Bruger.Adresse">
                    <span class="alert-danger" asp-validation-for="Bruger.Adresse"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-1">Postnr/By:</label>
                <div class="col-sm-2">
                    <input class="form-control" asp-for="Bruger.PostBy">
                    <span class="alert-danger" asp-validation-for="Bruger.PostBy"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-1">Afdeling</label>
                <div class="col-sm-4">
                    <select asp-for="Bruger.Afdeling">
                        <option disabled selected> -- Vælg en Afdeling -- </option>
                        <option value="Gymnastik">Gymnastik</option>
                        <option value="Fodbold">Fodbold</option>
                        <option value="Badminton">Badminton</option>
                        <option value="Håndbold">Håndbold</option>
                        <option value="Bordtennis">Bordtennis</option>
                        <option value="Folkedans">Folkedans</option>
                    </select>
                </div>
            </div>
            <span class="col-lg-offset-1 alert-danger" asp-validation-for="Bruger.Afdeling"></span>
            <div class="form-group">
                <label class="control-label col-sm-1">Mail:</label>
                <div class="col-sm-2">
                    <input class="form-control" asp-for="Bruger.Mail">
                    <span class="alert-danger" asp-validation-for="Bruger.Mail"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-1">Bank Regnr:</label>
                <div class="col-sm-2">
                    <input class="form-control" asp-for="Bruger.BankRegnr">
                    <span class="alert-danger" asp-validation-for="Bruger.BankRegnr"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-1">Bank Kontonr:</label>
                <div class="col-sm-2">
                    <input class="form-control" asp-for="Bruger.BankKontoNr">
                    <span class="alert-danger" asp-validation-for="Bruger.BankKontoNr"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-1 col-sm-10">
                    <button asp-page-handler="SendTo" class="btn btn-default">Send Kørselsseddel til Raklev</button>
                </div>
            </div>
        </div>
    </form>
</body>
</html>